.l-search {
  width: 100%;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.l-search__content {
  flex: 1;
  align-items: center;
  flex-direction: row;
  box-sizing: border-box;
  height: var(--l-search-height, 80rpx);
  align-items: center;
  border: 2rpx solid var(--l-search-bg-color, var(--l-fill-3, rgba(0, 0, 0, 0.04)));
  background: var(--l-search-bg-color, var(--l-fill-3, rgba(0, 0, 0, 0.04)));
  padding: var(--l-search-padding, 16rpx 24rpx);
}
.l-search__content--focused {
  border-color: var(--l-search-bg-color, var(--l-fill-3, rgba(0, 0, 0, 0.04)));
}
.l-search__content--round {
  border-radius: var(--l-search-radius, 99px);
}
.l-search__content--square {
  border-radius: var(--l-search-radius, var(--l-border-radius, 12rpx));
}
.l-search__content--center {
  text-align: center;
}
.l-search__keyword {
  flex: 1;
  color: var(--l-search-text-color, var(--l-text-color-1, rgba(0, 0, 0, 0.88)));
  font-size: var(--l-search-font-size, var(--l-font-size-md, 16px));
  padding-left: 10rpx;
}
.l-search__placeholder {
  color: var(--l-search-placeholder-color, var(--l-text-color-3, rgba(0, 0, 0, 0.45)));
}
.l-search__placeholder--center {
  text-align: center;
}
.l-search__icon {
  color: var(--l-search-icon-color, var(--l-text-color-4, rgba(0, 0, 0, 0.25)));
}
.l-search__clear {
  position: relative;
  margin-left: 10px;
  color: var(--l-search-clear-icon-color, var(--l-text-color-4, rgba(0, 0, 0, 0.25)));
}
.l-search__clear-icon {
  color: var(--l-search-clear-icon-color, var(--l-text-color-4, rgba(0, 0, 0, 0.25)));
}
.l-search__clear--right {
  margin-right: 10px;
}
.l-search__action {
  margin-left: 30rpx;
  font-size: var(--l-search-font-size, var(--l-font-size-md, 16px));
  color: var(--l-search-action-color, #3283ff);
}