.l-upload {
  flex: 1;
  position: relative;
  flex-direction: row;
  flex-wrap: wrap;
}
.l-upload__item {
  position: relative;
  display: flex;
}
.l-upload__item-inner {
  overflow: hidden;
  display: flex;
  border-radius: var(--l-upload-radius, var(--l-border-radius, 12rpx));
  align-items: center;
  justify-content: center;
  min-width: var(--l-upload-width, 80px);
  height: var(--l-upload-height, 80px);
  position: relative;
}
.l-upload__item--add {
  font-size: var(--l-upload-add-icon-font-size, 28px);
  color: var(--l-upload-add-color, var(--l-text-color-4, rgba(0, 0, 0, 0.25)));
}
.l-upload__item--add > view {
  background: var(--l-upload-background, var(--l-upload-add-bg-color, var(--l-gray-1, #f3f3f3)));
}
.l-upload__item--disabled {
  opacity: 0.5;
  cursor: not-allowed;
}
.l-upload__image {
  width: 100%;
  height: 100%;
}
.l-upload__add-icon {
  font-size: var(--l-upload-add-icon-font-size, 28px);
  color: var(--l-upload-add-color, var(--l-text-color-4, rgba(0, 0, 0, 0.25)));
}
.l-upload__delete-btn {
  position: absolute;
  top: 0;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 20px;
  height: 20px;
  border-top-right-radius: var(--l-upload-radius, var(--l-border-radius, 12rpx));
  border-bottom-left-radius: var(--l-upload-radius, var(--l-border-radius, 12rpx));
  background-color: var(--l-text-color-2, rgba(0, 0, 0, 0.65));
  color: var(--l-upload-delete-icon-color, white);
}
.l-upload__progress-mask {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 100%;
  background-color: var(--l-bg-color-mask, rgba(0, 0, 0, 0.45));
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: var(--l-upload-radius, var(--l-border-radius, 12rpx));
  padding: 16px 0;
  display: flex;
  color: white;
}
.l-upload__progress-text {
  font-size: 12px;
  line-height: 20px;
  margin-top: 4px;
  color: white;
}
.l-upload__progress-loading {
  align-self: center;
}
.l-upload__progress-icon {
  color: white;
  font-size: 24px !important;
  width: 24px !important;
}