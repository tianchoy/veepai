:host{display:flex;flex-direction:column}

.fui-toast__wrap.data-v-e023edfe {
		position: fixed;
		left: 15%;
		right: 15%;
		display: flex;
		align-items: center;
		justify-content: center;
		transition-property: opacity, visibility;
		transition-timing-function: ease-in-out;
		transition-duration: 0.25s;
		visibility: hidden;
		opacity: 0;
		pointer-events: none;
}
.fui-toast__center.data-v-e023edfe {
		top: 50%;
		transform: translateY(-50%);
}
.fui-toast__bottom.data-v-e023edfe {
		bottom: 160rpx;
		transform: translateY(0);
}
.fui-toast__inner.data-v-e023edfe {
		display: flex;
		align-items: center;
		justify-content: center;
		flex-direction: column;
		border-radius: 16rpx;
		overflow: hidden;
		box-sizing: border-box;
}
.fui-toast__icon-box.data-v-e023edfe {
		padding-bottom: 20rpx;
		box-sizing: content-box;
		flex-shrink: 0;
}
.fui-toast__text.data-v-e023edfe {
		font-weight: 400;
		text-align: center;
}
