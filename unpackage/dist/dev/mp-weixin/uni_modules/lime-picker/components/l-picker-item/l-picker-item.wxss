:host {
  flex: 1;
  display: flex;
}
.l-picker-item__group {
  flex: 1;
}
.l-picker-item__group-item {
  height: var(--l-picker-item-height, 50px);
  line-height: var(--l-picker-item-height, 50px);
  text-align: center;
  display: flex;
  justify-content: center;
  transition-duration: 100ms;
  transition-property: font-weight, color;
  transition-timing-function: linear;
  font-weight: 400;
  color: var(--l-picker-item-color, var(--l-text-color-1, rgba(0, 0, 0, 0.88)));
  font-size: var(--l-picker-item-font-size, var(--l-font-size-md, 16px));
  white-space: nowrap;
}
.l-picker-item__group-item--active {
  color: var(--l-picker-item-active-color, var(--l-text-color-1, rgba(0, 0, 0, 0.88)));
  font-weight: var(--l-picker-item-active-font-weight, 700);
}
.l-picker-item__indicator {
  left: 0rpx;
  right: 0rpx;
  width: auto;
  height: var(--l-picker-item-height, 50px);
  pointer-events: none;
  background-color: var(--l-picker-indicator-bg-color, var(--l-fill-4, rgba(0, 0, 0, 0.02)));
}
.l-picker-item__indicator:after, .l-picker-item__indicator:before {
  display: none;
}