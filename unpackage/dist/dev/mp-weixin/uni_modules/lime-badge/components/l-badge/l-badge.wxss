.l-badge {
  box-sizing: border-box;
  min-width: var(--l-badge-size, 32rpx);
  padding: var(--l-badge-padding, 0 8rpx);
  color: var(--l-badge-color, white);
  font-weight: var(--l-badge-font-weight, bold);
  font-size: var(--l-badge-font-size, 12px);
  font-family: var(--l-badge-font, -apple-system-font, helvetica neue, arial, sans-serif);
  line-height: 1.2;
  text-align: center;
  background-color: var(--l-badge-background, #FF4D4F);
  border: var(--l-badge-border-width, 1rpx) solid var(--l-badge-border-color, white);
  border-radius: var(--l-badge-border-radius, 999px);
  overflow: visible;
}
.l-badge--fixed {
  position: absolute;
  transform-origin: 100%;
}
.l-badge--fixed.l-badge--offscreen {
  position: fixed;
  opacity: 0;
  top: -10000000000px;
}
.l-badge--top-left {
  top: 0;
  left: 0;
  transform: translate(-50%, -50%);
}
.l-badge--top-right {
  top: 0;
  right: 0;
  transform: translate(50%, -50%);
}
.l-badge--bottom-left {
  bottom: 0;
  left: 0;
  transform: translate(-50%, 50%);
}
.l-badge--bottom-right {
  bottom: 0;
  right: 0;
  transform: translate(50%, 50%);
}
.l-badge--dot {
  width: var(--l-badge-dot-size, 16rpx);
  min-width: 0;
  height: var(--l-badge-dot-size, 16rpx);
  background: var(--l-badge-dot-color, #FF4D4F);
  border-radius: 99px;
  border-width: 0;
  padding: 0;
  overflow: visible;
}
.l-badge__wrapper {
  position: relative;
  overflow: visible;
}