.l-progress {
  flex-direction: row;
  gap: 5px;
  color: var(--l-progress-text-color, var(--l-text-color-2, rgba(0, 0, 0, 0.65)));
  font-size: var(--l-progress-font-size, 10px);
}
.l-progress-bg {
  height: var(--l-progress-stroke-width, 4px);
  position: relative;
  background-color: var(--l-progress-stroke-color, #3283ff);
  border-radius: var(--l-progress-border-radius, 99px);
  transition-property: width;
  transition-duration: var(--l-progress-duration, 300ms);
  transition-timing-function: var(--l-progress-anim-time-fn, cubic-bezier(0, 0, 0.15, 1));
  justify-content: center;
  min-width: -webkit-max-content;
  min-width: max-content;
}
.l-progress-bg .l-progress__inner-text {
  padding: 0 var(--l-spacer-tn, 8rpx);
  color: var(--l-progress-inner-text-color, white);
  font-size: var(--l-progress-font-size, 10px);
  white-space: nowrap;
}
.l-progress__inner {
  flex: 1;
  align-self: center;
  border-radius: var(--l-progress-border-radius, 99px);
  background-color: var(--l-progress-trail-color, var(--l-fill-2, rgba(0, 0, 0, 0.06)));
}
.l-progress--inner .l-progress-bg {
  height: var(--l-progress-stroke-width, 20px);
}